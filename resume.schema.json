{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["version", "profile", "contact", "metrics", "skills", "education", "experience", "languages"],
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "profile": {
            "type": "object",
            "required": ["full_name", "title", "photography", "banner", "summary", "birth_date", "age", "location", "education_level", "freelance_available"],
            "properties": {
                "full_name": {
                    "type": "string",
                    "minLength": 1
                },
                "title": {
                    "type": "string",
                    "minLength": 1
                },
                "photography": {
                    "type": "string",
                    "format": "uri"
                },
                "banner": {
                    "type": "string",
                    "format": "uri"
                },
                "summary": {
                    "type": "string",
                    "minLength": 10
                },
                "birth_date": {
                    "type": "string",
                    "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                },
                "age": {
                    "type": "integer",
                    "minimum": 0
                },
                "location": {
                    "type": "object",
                    "required": ["city", "state", "country"],
                    "properties": {
                        "city": {
                            "type": "string"
                        },
                        "state": {
                            "type": "string"
                        },
                        "country": {
                            "type": "string"
                        }
                    }
                },
                "education_level": {
                    "type": "string"
                },
                "freelance_available": {
                    "type": "boolean"
                }
            }
        },
        "contact": {
            "type": "object",
            "required": ["email", "phone", "website", "social"],
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "phone": {
                    "type": "string",
                    "pattern": "^\\+?[\\d\\s-]+$"
                },
                "website": {
                    "type": "string",
                    "format": "uri"
                },
                "social": {
                    "type": "object",
                    "properties": {
                        "facebook": {
                            "type": "string",
                            "format": "uri"
                        },
                        "instagram": {
                            "type": "string",
                            "format": "uri"
                        },
                        "linkedin": {
                            "type": "string",
                            "format": "uri"
                        },
                        "github": {
                            "type": "string",
                            "format": "uri"
                        },
                        "npm": {
                            "type": "string",
                            "format": "uri"
                        }
                    }
                }
            }
        },
        "metrics": {
            "type": "object",
            "required": ["years_experience", "projects_completed", "clients", "tools_used"],
            "properties": {
                "years_experience": {
                    "type": "integer",
                    "minimum": 0
                },
                "projects_completed": {
                    "type": "integer",
                    "minimum": 0
                },
                "clients": {
                    "type": "integer",
                    "minimum": 0
                },
                "tools_used": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "skills": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["name", "category", "years_experience", "level", "description"],
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "category": {
                        "type": "string",
                        "enum": [
                            "Frontend",
                            "Backend",
                            "Frontend / Backend",
                            "DevOps",
                            "CMS",
                            "Cloud",
                            "AI",
                            "Media",
                            "Programming",
                            "Database",
                            "Mobile",
                            "API",
                            "Design",
                            "Management"
                        ]
                    },
                    "years_experience": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "level": {
                        "type": "string",
                        "enum": [
                            "Basic",
                            "Basic-Intermediate",
                            "Intermediate",
                            "Intermediate-Advanced",
                            "Advanced"
                        ]
                    },
                    "description": {
                        "type": "string",
                        "minLength": 10
                    }
                }
            }
        },
        "education": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["degree", "institution", "start_year", "end_year"],
                "properties": {
                    "degree": {
                        "type": "string",
                        "minLength": 1
                    },
                    "institution": {
                        "type": "string",
                        "minLength": 1
                    },
                    "start_year": {
                        "type": "integer",
                        "minimum": 1900
                    },
                    "end_year": {
                        "type": "integer",
                        "minimum": 1900
                    }
                }
            }
        },
        "certifications": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name", "issuer", "year"],
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "issuer": {
                        "type": "string",
                        "minLength": 1
                    },
                    "year": {
                        "type": "integer",
                        "minimum": 1900
                    },
                    "id": {
                        "type": "string"
                    }
                }
            }
        },
        "experience": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["role", "company", "start", "end", "location", "description"],
                "properties": {
                    "role": {
                        "type": "string",
                        "minLength": 1
                    },
                    "company": {
                        "type": "string",
                        "minLength": 1
                    },
                    "start": {
                        "type": "string",
                        "pattern": "^\\d{4}-\\d{2}$"
                    },
                    "end": {
                        "type": "string",
                        "pattern": "^\\d{4}-\\d{2}|Present$"
                    },
                    "location": {
                        "type": "string",
                        "minLength": 1
                    },
                    "description": {
                        "type": "string",
                        "minLength": 10
                    },
                    "responsibilities": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 5
                        }
                    },
                    "tools": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 1
                        }
                    }
                }
            }
        },
        "projects": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name", "description"],
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "description": {
                        "type": "string",
                        "minLength": 10
                    }
                }
            }
        },
        "languages": {
            "type": "object",
            "required": ["es", "en"],
            "properties": {
                "es": {
                    "type": "object",
                    "required": ["level"],
                    "properties": {
                        "level": {
                            "type": "string",
                            "enum": ["Native", "Fluent", "Advanced", "Intermediate", "Basic"]
                        },
                        "certification": {
                            "type": "string"
                        }
                    }
                },
                "en": {
                    "type": "object",
                    "required": ["level"],
                    "properties": {
                        "level": {
                            "type": "string",
                            "enum": ["Native", "Fluent", "Advanced", "Intermediate", "Basic"]
                        },
                        "certification": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "recommendations": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name", "company", "text"],
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "company": {
                        "type": "string",
                        "minLength": 1
                    },
                    "text": {
                        "type": "string",
                        "minLength": 10
                    }
                }
            }
        }
    }
}
